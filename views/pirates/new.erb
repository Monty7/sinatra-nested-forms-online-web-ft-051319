<!DOCTYPE html>
<html>
    <h1>Welcome to the Nested Forms Lab!</h1>
    <form method="POST" action="/pirates">
        <legend>
            <label for="name">Pirate Name:</label>
            <input id="name" type="text" name="pirate[name]" >
            <label for="weight">Weight</label>
            <input id="weight" type="text" name="pirate[weight]">
            <label for="height">Height</label>
            <input id="height" type="text" name="pirate[height]">
        </legend>
        <legend>
            <label for="ship_name_1">Ship Name:</label>
            <input id="ship_name_1" type="text" name="pirate[ships][][name]" >
            <label for="ship_type_1">Type</label>
            <input id="ship_type_1" type="text" name="pirate[ships][][type]">
            <label for="ship_booty_1">Booty</label>
            <input id="ship_booty_1" type="text" name="pirate[ships][][booty]">
        </legend>
        <legend>
            <label for="ship_name_2">Ship Name:</label>
            <input id="ship_name_2" type="text" name="pirate[ships][][name]" >
            <label for="ship_type_2">Type</label>
            <input id="ship_type_2" type="text" name="pirate[ships][][type]">
            <label for="ship_booty_2">Booty</label>
            <input id="ship_booty_2" type="text" name="pirate[ships][][booty]">

            <input id='Submit' type="submit" value="submit">
        </legend>
    </form>

</html>
